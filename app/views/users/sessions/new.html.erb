<% content_for :title, "Inicia sesión con tu cuenta HabitaYa" %>
<div>
<%= form_for(resource ,as: resource_name, url: session_path(resource_name),:html => {:class => "cd-form floating-labels"}) do |f| %>
<fieldset>
  <legend>Iniciar Sesión</legend>
   
    <div class="icon">
      <%= f.label :email, "Correo electrónico", :class => "cd-label"%>
      <%= f.email_field :email, autofocus: true, :class => "email", :required => true, autocomplete: "off" %>
    </div>

    <div class="icon">
      <%= f.label :password, "Contraseña",:class => "cd-label" %>
      <%= f.password_field :password, autocomplete: "off", :class => "key", :required => true %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="icon">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Guardar sesión" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Ingresar" %>
    </div>
<% end %>

<%= render "users/shared/links" %>
</div>