.cd-form input[type="submit"] 
  border: none
  background: #2c97de
  border-radius: .25em
  padding: 16px 20px
  color: #ffffff
  font-weight: bold
  float: right
  cursor: pointer
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  -webkit-appearance: none
  -moz-appearance: none
  -ms-appearance: none
  -o-appearance: none
  appearance: none
  
.cd-form input[type="submit"].full-input
  border: none
  background: #2c97de
  border-radius: .25em
  padding: 16px 20px
  color: #ffffff
  font-weight: bold
  float: right
  cursor: pointer
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  -webkit-appearance: none
  -moz-appearance: none
  -ms-appearance: none
